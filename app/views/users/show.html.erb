<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">

  <% if logged_in? %>
    <% if @user == current_user %>
      <%= link_to 'Edit your profile', edit_user_path(@user), class: "btn btn-outline-info" %>
    <% end %>
    <% if current_user.admin? %>
      <%= link_to 'Delete profile', user_path(@user), class: "btn btn-outline-info", method: :delete,
                  data: { confirm: "Are you sure you want to delete the user account and all the articles associated with it?" } %>
    <% end %>
  <% end %>

</div>
<h3 class="text-center mt-4"><%= @user.articles.empty? ? 'No articles yet' : 'Articles' %></h3>

<%= render 'layouts/articles' %>
